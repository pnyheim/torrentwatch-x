//Transmission session-id cache file
function get_tr_sessionIdFile() {
    global $platform;
    if($platform == 'NMT') {
        return '/share/Apps/Torrentwatchx/tmp/.Transmission-Session-Id';
    } else {
        return '/tmp/.Transmission-Session-Id';
    }
}

