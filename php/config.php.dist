// You may change these defaults to fit your personal situation.

//Config File Loaction.
function platform_getConfigDir() {
  global $platform;
  $basedir = get_base_dir() . "/etc";
  if($platform == 'NMT') {
        return $basedir;
  } else {
      return "/etc/torrentwatch";
  }
}

